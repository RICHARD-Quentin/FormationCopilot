// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "GitHub Copilot Hackathon",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "lts"
		},
		"ghcr.io/devcontainers-contrib/features/mocha:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/java:1": {
			"version": "17",
			"installMaven": true
		},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.8"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"redhat.vscode-yaml",
				"GitHub.vscode-github-actions",
				"ms-azuretools.vscode-docker",
				"ms-dotnettools.csdevkit",
				"vscjava.vscode-java-pack",
				"ms-toolsai.jupyter",
				"ms-python.python",
				"ritwickdey.LiveServer",
				"samplavigne.p5-vscode",
				"rangav.vscode-thunder-client"
			]
		}
	},
	"postCreateCommand": [
		"cd ./p5; npm install; npm install p5; cd ..",
		"cd ./rent-car/src",
		"dotnet restore ./rent-car.sln",
		"dotnet add package Pomelo.EntityFrameworkCore.MySql --version 8.0.0",
		"dotnet add package Microsoft.EntityFrameworkCore.Tools",
		"make launch-database"
	],
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [5500, 5156, 7117],
	"portsAttributes": {
			"5156": {
				"protocol": "https"
			}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"	
}